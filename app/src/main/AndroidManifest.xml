<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.certified.jobfinder">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:resizeableActivity="false"
        android:theme="@style/Theme.JobFinder"
        tools:targetApi="n">
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".IndividualActivity" />
        <activity
            android:name=".BusinessProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity android:name=".JobDetailActivity" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarMaterial">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BusinessActivity"
            android:label="@string/title_activity_business"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".StartActivity"
            android:resizeableActivity="false"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarMaterial" />
        <activity
            android:name=".IndividualActivity"
            android:label="@string/title_activity_individual"
            android:launchMode="singleTop"
            android:resizeableActivity="false"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarMaterial" />
    </application>

</manifest>