<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">
  <fragment
      android:id="@+id/homeFragment"
      android:name="com.certified.jobfinder.business_bottom_nav_menu_fragments.HomeFragment"
      android:label="Home"
      tools:layout="@layout/fragment_home" >
    <action
        android:id="@+id/action_homeFragment_to_newOfferFragment"
        app:destination="@id/newOfferFragment" />
  </fragment>
  <fragment
      android:id="@+id/profileFragment"
      android:name="com.certified.jobfinder.business_bottom_nav_menu_fragments.ProfileFragment"
      android:label="Profile"
      tools:layout="@layout/fragment_profile" />
  <fragment
      android:id="@+id/jobsFragment"
      android:name="com.certified.jobfinder.business_bottom_nav_menu_fragments.JobsFragment"
      android:label="My jobs" />
  <fragment
      android:id="@+id/alertsFragment"
      android:name="com.certified.jobfinder.business_bottom_nav_menu_fragments.AlertFragment"
      android:label="Alerts"
      tools:layout="@layout/fragment_alert" />
  <fragment
      android:id="@+id/aboutFragment"
      android:name="com.certified.jobfinder.AboutFragment"
      android:label="About us"
      tools:layout="@layout/fragment_about" />
  <fragment
      android:id="@+id/contactFragment"
      android:name="com.certified.jobfinder.ContactFragment"
      android:label="Contact us"
      tools:layout="@layout/fragment_contact" />
  <fragment
      android:id="@+id/helpFragment"
      android:name="com.certified.jobfinder.HelpFragment"
      android:label="Help and Feedback"
      tools:layout="@layout/fragment_help" />
  <fragment
      android:id="@+id/newOfferFragment"
      android:name="com.certified.jobfinder.NewOfferFragment"
      android:label="New offer"
      tools:layout="@layout/fragment_new_offer" >
    <action
        android:id="@+id/action_newOfferFragment_to_homeFragment"
        app:destination="@id/homeFragment" />
  </fragment>
</navigation>